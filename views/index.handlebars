<div class="container">
    <div class="row d-flex justify-content-center mt-1">
        <button id="startBtn" onclick="init();" class="btn">Start Game!</button>
    </div>
    <div id="snakeWrap">
        <canvas id="snakeCanvas" width="600" height="500"></canvas>
    </div>
    <div class="row d-flex justify-content-center">
        <div id="scoreCard" class="card">
            <div class="card-body">
                <p class="card-title text-center">
                    Scoreboard
                </p>
                <hr />
                <div class="row">
                    <div id="scoreCountCard" class="card">
                        <div class="card-body">
                            <span id="appleCount">applecount: 0</span>
                        </div>
                    </div>
                    <div id="highScoreCard" class="card">
                        <div class="card-body">
                            <span id="highScore">High Score: 0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{{#each Player}}
<p>name: {{name}}</p>
<p>score: {{score}}</p>
{{/each}}